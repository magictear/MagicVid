        -webkit-box-direction: normal;
        -ms-flex-flow: column;
        flex-flow: column;
        padding: 10px;
        z-index: 4;
        position: relative;
      }

      .theme-card__body .feature__des .feature__content h3 {
        color: #fff;
        font-size: 18px;
        font-weight: 600;
        cursor: auto;
        text-transform: uppercase;
      }
      .theme-card__body .feature__des .feature__content h4 {
        color: #fff;
        font-size: 16px;
        font-weight: 600;
        cursor: auto;
        line-height:1;
      }
      .theme-card__body .feature__des .feature__content a {
        color: #fff;
        font-weight: 600;
        text-transform: uppercase;
        position: relative;
        margin: 20px 0;
      }

      .theme-card__body .feature__des .feature__content a:hover {
        color: #face49;
      }

      .theme-card__body .feature__des .feature__content a::before {
        top: -12px;
        left: 50%;
        width: 60px;
        height: 2px;
        content: "";
        position: absolute;
        background: #fff;
        -webkit-transform: translate(-50%, 0);
        -moz-transform: translate(-50%, 0);
        -ms-transform: translate(-50%, 0);
        transform: translate(-50%, 0);
      }

      .theme-card__body .feature__des::before {
        position: absolute;
        content: "";
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        border: 3px solid #fff;
        -webkit-transform: scale(0.9);
        -ms-transform: scale(0.9);
        transform: scale(0.9);
        opacity: 0;
        visibility: hidden;
        -webkit-transition: all 0.4s ease-out;
        -moz-transition: all 0.4s ease-out;
        -o-transition: all 0.4s ease-out;
        transition: all 0.4s ease-out;
      }

      .theme-card__body:hover .feature__des {
        opacity: 0;
        visibility: hidden;
      }

      .theme-card__body:hover ::before {
        opacity: 1;
        visibility: visible;
        -webkit-transform: scale(1);
        -ms-transform: scale(1);
        transform: scale(1);
      }

      .theme-card__body::after {
        top: 0;
        left: 0;
        content: "";
        width: 100%;
        height: 100%;
        position: absolute;
        background: rgba(0, 0, 0, 0.3);
        opacity: 0;
        visibility: hidden;
        -webkit-transition: all 0.4s ease-out;
        -moz-transition: all 0.4s ease-out;
        -o-transition: all 0.4s ease-out;
        transition: all 0.4s ease-out;
      }

      .theme-card__body:hover::after {
        opacity: 1;
        visibility: visible;
      }

